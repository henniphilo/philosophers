{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Debug",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/philo",
		"args": ["4", "410", "200", "200"],  // Example arguments
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  }
		],
		"preLaunchTask": "build",
		"miDebuggerPath": "/usr/bin/gdb",
		"logging": {
		  "moduleLoad": true,
		  "trace": true,
		  "engineLogging": true,
		  "programOutput": true,
		  "exceptions": true
		}
	  }
	]
  }
